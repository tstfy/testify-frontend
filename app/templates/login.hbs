<section class="hero is-dark is-fullheight">
  {{nav-bar}}
  <div class="hero-body">
    <div class="container has-text-centered">
      <div class="column is-4 is-offset-4">
        <h3 class="title">Login</h3>
        <p class="subtitle">Please login to proceed.</p>
        <div class="box">
          <figure class="image is-2by1">
            <img src="/images/logo_reverse.png">
          </figure>
          <form id="login-form">
            <div class="field">
              <div class="control">
                <input class="input is-large" type="email" placeholder="Email" autofocus="">
              </div>
            </div>

            <div class="field">
              <div class="control">
                <input class="input is-large" type="password" placeholder="Password">
              </div>
            </div>
            <div class="field">
              <label class="checkbox">
                <input type="checkbox">
                Remember me
              </label>
            </div>
            <button class="button is-block is-info is-large is-fullwidth">Login</button>
          </form>
          <div class="content">
            <p>or sign in with</p>
            <span onclick={{action "login"}} class="icon github">
              <i id="github-login" href="#" class="fab fa-3x fa-github">
                {{#fa-stack size="lg" as |s|}}
                {{s.stack-2x "circle"}}
                {{s.stack-1x "github" inverse=true}}
                {{/fa-stack}}
              </i>
            </span>
          </div>
        </div>
        <p>
          <a onclick={{action "toggleSignUp"}}>Sign Up</a> &nbsp;·&nbsp;
          <a href="../">Forgot Password</a> &nbsp;·&nbsp;
          <a href="../">Need Help?</a>
        </p>
      </div>
    </div>
  </div>
</section>
<!-- modal -->
<div class="modal {{if showSignUp "is-active"}}">
  <div class="modal-background"></div>
  <div class="modal-card">
    <header class="modal-card-head">
      <p class="modal-card-title">Sign Up</p>
      <button class="delete" aria-label="close" {{action "toggleSignUp"}}></button>
    </header>
    <section class="modal-card-body">
	  <div class="field">
	    <label class="label">Email Address <span class="has-text-danger">*</span></label>
	    <div class="control">
		  <input class="input" type="email" placeholder="Email address" required>
	    </div>
	  </div>
	  <div class="field">
	    <label class="label">Password <span class="has-text-danger">*</span></label>
	    <div class="control">
		  <input class="input" type="password" minlength="6" maxlength="20" placeholder="Password" required>
	    </div>
		<label class="label"><span class="has-text-danger is-size-7">6 or more characters</span></label>
	  </div>
	  <div class="field">
	    <label class="label">Confirm Password <span class="has-text-danger">*</span></label>
	    <div class="control">
		  <input class="input" type="password" minlength="6" maxlength="20" placeholder="Password" required>
	    </div>
	  </div>
    </section>
    <footer class="modal-card-foot">
      <button class="button is-success" {{action "createUser"}} type="submit">Save</button>
      <button class="button" {{action "toggleSignUp"}}>Cancel</button>
    </footer>
  </div>
</div>
