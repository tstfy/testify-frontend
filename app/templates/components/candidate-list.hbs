<table class="table is-fullwidth is-hoverable is-centered is-narrow">
  <thead>
    <tr>
      <th>User</th>
      <th><abbr title="Git Repository Link">Git-Repo</abbr></th>
      <th>Status</th>
    </tr>
  </thead>
  <tbody>
    {{#each candidates key="id" as |candidate|}}
    {{#if (eq candidate.status '0')}}
      <tr class="pending">      
      <td>{{candidate.user}}</td>
      <td><a class="button is-primary" {{action "copyToClipboard" candidate.gitrepo}}>Copy</a></td>
      <td>
      <div class="select">
        <select>
          {{#if (eq candidate.status '0')}}
            <option value="0" selected>Pending</option>
            <option value="1">Accept</option>
            <option value="2">Reject</option>
          {{else if (eq candidate.status '1')}}
            <option value="0">Pending</option>
            <option value="1" selected>Accept</option>
            <option value="2">Reject</option>
          {{else if (eq candidate.status '2')}}
            <option value="0">Pending</option>
            <option value="1">Accept</option>
            <option value="2" selected>Reject</option>
          {{/if}}
        </select>
      </div>
      </td>
      </tr>
    {{else if (eq candidate.status '1')}}
      <tr class="accept">
      <td>{{candidate.user}}</td>
      <td><a class="button is-primary" {{action "copyToClipboard" candidate.gitrepo}}>Copy</a></td>
      <td>
      <div class="select">
        <select>
          {{#if (eq candidate.status '0')}}
            <option value="0" selected>Pending</option>
            <option value="1">Accept</option>
            <option value="2">Reject</option>
          {{else if (eq candidate.status '1')}}
            <option value="0">Pending</option>
            <option value="1" selected>Accept</option>
            <option value="2">Reject</option>
          {{else if (eq candidate.status '2')}}
            <option value="0">Pending</option>
            <option value="1">Accept</option>
            <option value="2" selected>Reject</option>
          {{/if}}
        </select>
      </div>
      </td>
      </tr>
    {{else if (eq candidate.status '2')}}
      <tr class="reject">
      <td>{{candidate.user}}</td>
      <td><a class="button is-primary" {{action "copyToClipboard" candidate.gitrepo}}>Copy</a></td>
      <td>
      <div class="select">
        <select>
          {{#if (eq candidate.status '0')}}
            <option value="0" selected>Pending</option>
            <option value="1">Accept</option>
            <option value="2">Reject</option>
          {{else if (eq candidate.status '1')}}
            <option value="0">Pending</option>
            <option value="1" selected>Accept</option>
            <option value="2">Reject</option>
          {{else if (eq candidate.status '2')}}
            <option value="0">Pending</option>
            <option value="1">Accept</option>
            <option value="2" selected>Reject</option>
          {{/if}}
        </select>
      </div>
      </td>
      </tr>
    {{/if}}
    {{/each}}
  </tbody>
</table>